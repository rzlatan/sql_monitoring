            indentWithTabs: true,
            smartIndent: true,
            lineNumbers: true,
            matchBrackets: true,
            autofocus: true,
            extraKeys: { "Ctrl-Space": "autocomplete" }
        });
        window.myCodeMirror.on('change', editor => {
            //console.log(editor.getValue());
        });
        window.myCodeMirror.on('keydown', editor => {
            //do whatever you want
        });
    });
</script>

