<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SQLMonitoring</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header style="height:10%;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" style="float:left; margin-right:80%;width:15%;position:absolute;margin-left:10%;">
                <img src="~/logo.png" width="40" height="40" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SQLMonitoring</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            @if (ViewBag.IsAdmin != null && ViewBag.IsAdmin)
            {
                <a style="font-weight:bold;font-size:16px;margin-left:80%;"> Add user </a>
                <a style="font-weight:bold;font-size:16px;margin-left:3%;"> Log out </a>
            }
        </nav>
    </header>
    <div class="container" style="margin-bottom:100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer id="footer_id" class="border-top footer text-muted" style="position:absolute;bottom:0">
        <div class="container" style="margin-left:43%;position:absolute;bottom:0px;">
            &copy; 2021 - SQLMonitoring
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
